@model IEnumerable<VistarAutor.Models.Client.Client>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Журнал клиентов</h3>

<p>
    @Html.ActionLink("Создать клиента", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnumTypeClient.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Statuse.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeClient.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTimeRegistration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnumTypeClient.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Statuse.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeClient.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTimeRegistration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
