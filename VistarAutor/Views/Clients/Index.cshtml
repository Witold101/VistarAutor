@model IEnumerable<VistarAutor.Models.Client.Client>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Журнал клиентов</h3>

<p>
    @Html.ActionLink("Создать клиента", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Конрагент")
        </th>
        <th>
            @Html.Label("Полное наименование")
        </th>
        <th>
            @Html.Label("Вид")
        </th>
        <th>
            @Html.Label("Тип")
        </th>
        <th>
            @Html.Label("Дата реистрации")
        </th>
        <th>
            @Html.Label("Статус")
        </th>
        <th>
            @Html.Label("Куратор")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnumTypeClient.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeClient.Name)
        </td>
        <td>
            @item.DateTimeRegistration.ToString("d")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Statuse.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
