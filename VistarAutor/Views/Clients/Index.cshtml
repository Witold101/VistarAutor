@using VistarAutor.Models
@model IEnumerable<VistarAutor.Models.Client.Client>

@{
    ViewBag.Title = GlobalStrings.JURNAL_CLIENT;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@GlobalStrings.JURNAL_CLIENT</h3>

<p>
    @Html.ActionLink(GlobalStrings.CREATE, "Create")
</p>
<table class="table-striped" style="font-size: 14px">
    <tr>
        <th>
            @Html.ActionLink(GlobalStrings.NAME, "Index", new { id = 1 })
        </th>
        <th>
            @Html.Label(GlobalStrings.NAME_FULL)
        </th>
        <th>
            @Html.ActionLink(GlobalStrings.TYPE, "Index", new { id = 2 })
        </th>
        <th>
            @Html.Label(GlobalStrings.DATE_REG)
        </th>
        <th>
            @Html.Label(GlobalStrings.STATUS)
        </th>
        <th>
            @Html.ActionLink(GlobalStrings.KURATOR, "Index", new { id = 3 })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.Id },new {style="color: black"})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeClient.Name)
        </td>
        <td>
            @item.DateTimeRegistration.ToString("d")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Statuse.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Name)
        </td>
        <td>
            @Html.ActionLink(GlobalStrings.DELL, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
