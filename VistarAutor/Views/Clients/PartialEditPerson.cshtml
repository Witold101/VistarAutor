@using VistarAutor.Models
@model VistarAutor.Models.Person.MyPerson
<div class="modal fade" id="editPerson">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="inputName" class="col-sm-3 control-label">@GlobalStrings.F_NAME</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputName" placeholder=@GlobalStrings.F_NAME>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputDate" class="col-sm-3 control-label">@GlobalStrings.DATE_BE</label>
                            <div class="col-sm-5">
                                <input type="date" class="form-control" id="inputDate" placeholder=@GlobalStrings.DATE_BE>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputDeparture" class="col-sm-3 control-label">@GlobalStrings.DEPARTMENT</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="inputDeparture" placeholder=@GlobalStrings.DEPARTMENT>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPosition" class="col-sm-3 control-label">@GlobalStrings.POSITION</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="inputPosition" placeholder=@GlobalStrings.POSITION>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputNote" class="col-sm-3 control-label">@GlobalStrings.NOTE</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputNote" placeholder=@GlobalStrings.NOTE>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputNote" class="col-sm-3 control-label">@GlobalStrings.PHONES</label>
                            <div class="col-sm-9">
                                <div class="well well-sm">55555</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputNote" class="col-sm-3 control-label">@GlobalStrings.EMAILS</label>
                            <div class="col-sm-9">
                                <div class="well well-sm">55555</div>
                            </div>
                        </div>
                        
                    </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


