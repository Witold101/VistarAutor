@using VistarAutor.Models
@model VistarAutor.Models.Client.Client

@{
    ViewBag.Title = GlobalStrings.EDIT;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@GlobalStrings.EDIT</h3>

